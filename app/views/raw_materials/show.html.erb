<h2>Increase Stock</h2>
<%= form_with url: increase_stock_raw_material_path(@raw_material), method: :patch do %>
  <div class="field">
    <%= label_tag :quantity, "Quantity" %>
    <%= number_field_tag :quantity, nil, step: :any %>
  </div>
  <div class="field">
    <%= label_tag :received_date, "Received Date" %>
    <%= date_field_tag :received_date %>
  </div>
  <div class="field">
    <%= label_tag :purchase_order, "Purchase Order" %>
    <%= text_field_tag :purchase_order %>
  </div>
  <div class="actions">
    <%= submit_tag "Increase Stock" %>
  </div>
<% end %>

<h2>Decrease Stock</h2>
<%= form_with url: decrease_stock_raw_material_path(@raw_material), method: :patch do %>
  <div class="field">
    <%= label_tag :quantity, "Quantity" %>
    <%= number_field_tag :quantity, nil, step: :any %>
  </div>
  <div class="field">
    <%= label_tag :deduction_date, "Deduction Date" %>
    <%= date_field_tag :deduction_date %>
  </div>
  <div class="field">
    <%= label_tag :reason, "Reason" %>
    <%= text_field_tag :reason %>
  </div>
  <div class="actions">
    <%= submit_tag "Decrease Stock" %>
  </div>
<% end %>