<h1><%= @recipe.name %></h1>
<p><strong>ABV:</strong> <%= @recipe.abv %></p>
<p><strong>IBU:</strong> <%= @recipe.ibu %></p>
<p><strong>SRM:</strong> <%= @recipe.srm %></p>
<p><strong>Description:</strong> <%= @recipe.description %></p>

<h3>Grains</h3>
<ul>
  <% @recipe.grains.each do |grain| %>
    <li><%= grain.name %> - <%= grain.amount %> <%= grain.uom %> - Total Cost: <%= number_to_currency(grain.total_cost) %></li>
  <% end %>
</ul>

<h3>Hops</h3>
<ul>
  <% @recipe.hops.each do |hop| %>
    <li><%= hop.name %> - <%= hop.amount %> <%= hop.uom %> - Time: <%= hop.time %> - IBU: <%= hop.ibu %> - Type: <%= hop.hop_type %> - Total Cost: <%= number_to_currency(hop.total_cost) %></li>
  <% end %>
</ul>

<h3>Yeasts</h3>
<ul>
  <% @recipe.yeasts.each do |yeast| %>
    <li><%= yeast.name %> - <%= yeast.amount %> <%= yeast.uom %> - Total Cost: <%= number_to_currency(yeast.total_cost) %></li>
  <% end %>
</ul>

<h3>Misc</h3>
<ul>
  <% @recipe.miscs.each do |misc| %>
    <li><%= misc.name %> - <%= misc.amount %> <%= misc.uom %> - Total Cost: <%= number_to_currency(misc.total_cost) %></li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
