<%= form_with(model: @recipe) do |form| %>
  <% if @recipe.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>
      <ul>
        <% @recipe.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :abv %>
    <%= form.number_field :abv, step: :any %>
  </div>

  <div class="field">
    <%= form.label :ibu %>
    <%= form.number_field :ibu, step: :any %>
  </div>

  <div class="field">
    <%= form.label :srm %>
    <%= form.number_field :srm, step: :any %>
  </div>

  <h3>Grains</h3>
  <div id="grains">
    <%= form.fields_for :grains do |grain_form| %>
      <div class="nested-fields">
        <%= grain_form.label :name %>
        <%= grain_form.text_field :name %>
        <%= grain_form.label :amount %>
        <%= grain_form.number_field :amount, step: :any %>
        <%= link_to 'Remove', '#', class: 'remove_fields' %>
      </div>
    <% end %>
  </div>
  <%= link_to 'Add Grain', '#', id: 'add_grain' %>

  <h3>Hops</h3>
  <div id="hops">
    <%= form.fields_for :hops do |hop_form| %>
      <div class="nested-fields">
        <%= hop_form.label :name %>
        <%= hop_form.text_field :name %>
        <%= hop_form.label :amount %>
        <%= hop_form.number_field :amount, step: :any %>
        <%= hop_form.label :time %>
        <%= hop_form.number_field :time %>
        <%= hop_form.label :ibu %>
        <%= hop_form.number_field :ibu, step: :any %>
        <%= hop_form.label :type %>
        <%= hop_form.text_field :type %>
        <%= link_to 'Remove', '#', class: 'remove_fields' %>
      </div>
    <% end %>
  </div>
  <%= link_to 'Add Hop', '#', id: 'add_hop' %>

  <h3>Yeasts</h3>
  <div id="yeasts">
    <%= form.fields_for :yeasts do |yeast_form| %>
      <div class="nested-fields">
        <%= yeast_form.label :name %>
        <%= yeast_form.text_field :name %>
        <%= yeast_form.label :amount %>
        <%= yeast_form.number_field :amount, step: :any %>
        <%= link_to 'Remove', '#', class: 'remove_fields' %>
      </div>
    <% end %>
  </div>
  <%= link_to 'Add Yeast', '#', id: 'add_yeast' %>

  <h3>Brewing Salts</h3>
  <div id="brewing_salts">
    <%= form.fields_for :brewing_salts do |salt_form| %>
      <div class="nested-fields">
        <%= salt_form.label :name %>
        <%= salt_form.text_field :name %>
        <%= salt_form.label :amount %>
        <%= salt_form.number_field :amount, step: :any %>
        <%= salt_form.label :type %>
        <%= salt_form.text_field :type %>
        <%= link_to 'Remove', '#', class: 'remove_fields' %>
      </div>
    <% end %>
  </div>
  <%= link_to 'Add Brewing Salt', '#', id: 'add_brewing_salt' %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

